<UserControl x:Class="MetanitMVVM.OrderEntryTabs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MetanitMVVM"
             mc:Ignorable="d" 
          >
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="Auto"   Width="Auto">
            <TabItem Header="Market">
                <local:OrderEntryWindow Height="Auto" Width="Auto"/>
                
            </TabItem>
            <TabItem Header="Limit">
                <local:OrderEntryWindow Height="Auto" Width="Auto"/>
                
            </TabItem>
            <TabItem Header="StopLimit">
                <local:OrderEntryWindow Height="Auto" Width="Auto"/>
                
            </TabItem>
            
        </TabControl>

    </Grid>
</UserControl>
